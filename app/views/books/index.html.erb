<h1>Listing books</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Books list</div>
<div class="table-responsive">
  <!-- Table -->
  <table class="table table.responsive table-hover">
    <thead>
           <tr>
      <th>Isbn</th>
      <th>Author</th>
      <th>Title</th>
     <th>Physical</th>
     <th>Electronic</th>
     <!--  <th>Loandate</th>
      <th>Returndate</th>-->
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
             <tr>
              <td><%= book.ISBN %></td>
              <td><%= book.Author %></td>
              <td><%= book.Title %></td>
              <% if book.physical? %>
                <td>Yes</td>
              <% else %>
                <td>No</td>
              <% end %>
              <% if book.electronic? %>
                <td>Yes</td>
              <% else %>
                <td>No</td>
              <% end %>
              <td>
                <div class="btn-toolbar">
                  <%= link_to "Show", book, :class => "btn btn-success" %>
                  <%= link_to "Edit", edit_book_path(book), :class => "btn btn-warning" %>
                   <%= link_to 'Destroy', book, :class => "btn btn-primary btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
              </td>
            </tr>
            <% end %>
        </tbody>
    
  </table>
  </div>
</div>



<br>

<%= link_to 'New Book', new_book_path, :class => "btn btn-primary btn-info" %>


<h1>User List</h1>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">User list</div>
<div class="table-responsive">
  <!-- Table -->
  <table class="table table.responsive table-hover">
    <thead>
           <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>E-mail</th>
     <th>Role</th>
      <th colspan="3"></th>
    </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
             <tr>
              <td><%= user.name %></td>
              <td><%= user.surname %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
            </tr>
            <% end %>
        </tbody>
    
  </table>
  </div>
</div>
